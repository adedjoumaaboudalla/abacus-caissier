<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="@color/my_primary">

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_width="200dp"
        android:layout_height="120dp" />

    <TextView
        android:id="@+id/header"
        android:visibility="gone"
        android:layout_above="@+id/solde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#94eeeeee"
        android:padding="14dp"
        android:textColor="@color/my_icons"
        android:textSize="16sp"
        android:layout_gravity="bottom"
        android:text="Caisse No : "/>

    <TextView
        android:id="@+id/solde"
        android:layout_above="@+id/transfertdata"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_secondary_text"
        android:padding="14dp"
        android:textColor="@color/my_third_text"
        android:textSize="16sp"
        android:layout_gravity="bottom"
        android:text="Caisse No : "/>

    <TextView
        android:id="@+id/transfertdata"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_secondary_text"
        android:padding="14dp"
        android:textColor="@color/my_third_text"
        android:textSize="16sp"
        android:layout_gravity="bottom"
        android:text="Caisse No : "/>

</RelativeLayout>