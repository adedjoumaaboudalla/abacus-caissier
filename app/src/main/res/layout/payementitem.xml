<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageview"
        android:src="@drawable/abc_btn_radio_to_on_mtrl_015"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <LinearLayout
        android:layout_toRightOf="@+id/imageview"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/type"
                android:text="@string/opp"
                android:textSize="@dimen/primarysize"
                android:textColor="@color/my_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/numcpt"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/type"
                android:text="003344"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/numpiece"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/numcpt"
                android:layout_centerVertical="true"
                android:textSize="12dp"
                android:text="003344"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/date"
                android:layout_toRightOf="@+id/numpiece"
                android:layout_centerVertical="true"
                android:textSize="12dp"
                android:text="003344"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/t1"
                android:text="@string/mte1"
                android:textColor="@color/my_icons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/mte1"
                android:layout_toRightOf="@id/t1"
                android:layout_marginLeft="5dp"
                android:text="003344"
                android:textColor="@color/state2"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>