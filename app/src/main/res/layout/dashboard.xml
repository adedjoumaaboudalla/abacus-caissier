<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_margin="1dp"
                android:padding="10dp"
                android:clickable="true"
                android:id="@+id/menu_achat"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/ic_appro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/menu_achat"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_icons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="50"
                android:padding="10dp"
                android:clickable="true"
                android:id="@+id/menu_depense"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/ic_depense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/menu_depense"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_icons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_margin="1dp"
                android:padding="10dp"
                android:id="@+id/menu_divers"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/ic_entresortie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/menu_divers"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_icons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_banquetransaction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="50"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_banque"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_icons"
                    android:text="@string/menu_banquetransaction" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_margin="1dp"
                android:padding="10dp"
                android:clickable="true"
                android:id="@+id/menu_payement"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/ic_creditreglement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/menu_creance"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_icons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="1dp"
                android:layout_weight="50"
                android:padding="10dp"
                android:clickable="true"
                android:id="@+id/menu_commande_fournisseur"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@mipmap/ic_cmdfourn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/menu_commande_fournisseur"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/my_icons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>